<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GardenGnomeApp.PlayGame">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="TicTacToe" 
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    Clicked="PlayTicTacToe"/>
            <Button Text="Memory Game" 
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    Clicked="PlayMemoryGame"/>
            <Button Text="Spot The Plant" 
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    Clicked="PlaySpotThePlant"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>